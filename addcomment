#!/bin/bash
if [[ `ps ax | awk '$5 ~ /\/bin\/bash/' | awk '$6 ~ /\/usr\/local\/bin\/waitcomment.sh/' | wc -l` == 0 ]]; then 
	echo "No waitcomment process"
	exit
fi
source /usr/local/etc/sudo-comment.conf
tty=`tty | cut -d '/' -f 3-`
echo "Comment on an edit? [y/yp/N] " 
read comment
mytmpdir=`cat "$tmpdir/$tty"`
if [[ $comment == N ]]; then
	echo "N/A" > $tmpdir/$tty 
	echo "No comment added"
elif [[ $comment == yp ]]; then
	echo -e "=POSTDATED=" >> $mytmpdir/comment.tmp
	rvim '+normal Go' $mytmpdir/comment.tmp
	echo "OK" > $tmpdir/$tty
	echo "Comment added"
else
	rvim '+normal Go' $mytmpdir/comment.tmp
	echo "OK" > $tmpdir/$tty
	echo "Comment added"
fi
